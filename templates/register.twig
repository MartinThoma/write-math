{% extends "base.twig" %}

{% block content %}
    <div class="alert alert-info">You have to register to use this service.
    By registering you allow me to use and share the data you enter (except for
    your email and password) without any restriction.</div>

    <form action="." method="post" role="form" class="form-horizontal">
        <div class="form-group">
            <label for="display_name" class="col-sm-2 control-label">Display name</label>
            <div class="col-sm-10">
                <input type="text"
                       id="display_name"
                       name="display_name"
                       class="form-control"
                       pattern=".{4,20}"
                       required
                       title="4 to 20 characters"/>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" id="email" name="email" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password"
                       id="password"
                       name="password"
                       class="form-control"
                       pattern=".{5,}"
                       required
                       title="5 characters minimum"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
{% endblock %}