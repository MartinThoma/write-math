{% extends "base.twig" %}

{% block content %}

    <p class="bg-info">Only users with at least 5 written formulas will be
        listed below.</p>

    <table class="table table-striped">
    <tr>
        <th>#</th>
        <th>User</th>
        <th>Written formulas</th>
        <th>Distinct symbols</th>
    </tr>
    {% for user in users_by_raw_data %}
        {% if user.written_formulas >= 5 %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="../user/?id={{ user.id }}">{{ user.display_name }}</a></td>
                <td>{{ user.written_formulas }}</td>
                <td>{{ user.distinct_symbols }}</td>
            </tr>
        {% endif %}
    {% endfor %}
    <tr>
        <th>#</th>
        <th>Total</th>
        <th>{{ written_formulas_total }}</th>
        <th>{{ distinct_symbols_total }}</th>
    </tr>
    </table>
{% endblock %}