            <a href="?raw_data_id={{ raw_data_id }}&amp;unaccept={{ raw_data_id }}" class="btn btn-warning" accesskey="u">unaccept</a>
        {% endif %}
    {% endif %}
    </td>
  </tr>
  <tr>
