  <div role="tabpanel" class="tab-pane active" id="home">
<div class="row">
<div class="col-md-6">
<object data="../raw-data/{{ raw_data_id }}.svg{{ force_reload }}"
        type="image/svg+xml"
        id="canvas"
        style="width:400px;height:400px;border:1px solid black;"
></object>
